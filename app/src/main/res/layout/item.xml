<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_item"
    android:layout_width="347dp"
    android:layout_height="98dp"
    android:layout_marginLeft="7dp"
    android:layout_marginBottom="10dp"
    app:cardBackgroundColor="@color/card_blue"
    app:cardCornerRadius="20dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <View
            android:id="@+id/view"
            android:layout_width="98dp"
            android:layout_height="98dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:background="@drawable/image_bg" />

        <ImageView
            android:id="@+id/image"
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="6dp"
            android:layout_marginTop="7dp"
            app:srcCompat="@drawable/ic_launcher_foreground" />

        <TextView
            android:id="@+id/title"
            android:layout_width="218dp"
            android:layout_height="20dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="9dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/view"
            android:text="[Title]"
            android:textColor="#000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/subTitleOne"
            android:layout_width="210dp"
            android:layout_height="15dp"
            android:layout_below="@+id/title"
            android:layout_marginStart="9dp"
            android:layout_marginTop="7dp"
            android:layout_toEndOf="@+id/view"
            android:text="[Title]"
            android:textColor="#000"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/subTitleTwo"
            android:layout_width="210dp"
            android:layout_height="15dp"
            android:layout_below="@+id/subTitleOne"
            android:layout_marginStart="9dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/view"
            android:text="[Title]"
            android:textColor="#000"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/subTitleThree"
            android:layout_width="210dp"
            android:layout_height="15dp"
            android:layout_below="@+id/subTitleTwo"
            android:layout_marginStart="9dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/view"
            android:text="[Title]"
            android:textColor="#000"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="315dp"
            android:layout_below="@+id/view"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="32dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="32dp"
            android:text="TextView"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/readMoreLink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/description"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="0dp"
            android:text="Read More..."
            android:textAlignment="center"
            android:textStyle="bold" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>